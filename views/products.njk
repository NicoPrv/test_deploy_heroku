
{% extends "layout.njk" %}


{% block content %}

<h1 class="mt-5 text-center pt-4 pb-2">Products for category</h1>
  <div class="container-fluid text-center">
    <div class="row" style="display:flex">
{% for element in myProducts %}

    <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 card">
      <img class="card-img-top" src="https://www.decathlon.fr/media/{{element.image_path}}" alt="{{element.title}}">
      <div class="card-body">
        <h5 class="card-title">{{element.title}}</h5>
        <p class="card-text">{{element.description}}</p>
        <a href="/prod/{{element.id}}" class="btn btn-primary" style="background-color:#0082C3">See product details ></a>
      </div>
    </div>

{% endfor %}
</div>
</div>

{% endblock %}
